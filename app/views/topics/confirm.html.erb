<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

    <h3>以下の内容でいいですか？</h3>

    <%= form_for(@topic) do |f| %>

      <%= f.hidden_field :pict %>
      <%= f.hidden_field :pict_cache %>
      <%= f.hidden_field :content %>

      <p><%= image_tag @topic.pict.url if ! @topic.pict.blank? %></P>
      <p><%= @topic.content %></p>
      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>

    <%= form_for(@topic, url: new_topic_path, method: 'get') do |f| %>
      <%= f.hidden_field :pict %>
      <%= f.hidden_field :pict_cache %>
      <%= f.hidden_field :content %>
      <%= f.submit "戻る", name: 'back' %>
    <% end %>

  </div>
</div>
