<!DOCTYPE html>
<html>
<head>
  <title>Exam3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

  <header>

    <div class="row">
      <div class="col-xs-4">
        <ul>
          <li><%= link_to '', root_path, class: "fa fa-facebook-official fa-lg" %></li>
        </ul>
      </div>
      <div class="col-xs-8">
        <ul>
          <li><%= link_to "Find Friends", root_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to "ホーム", topics_path %></li>
            <li><%= link_to current_user.name, edit_user_registration_path %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'ログイン', new_user_session_path %></li>
            <li><%= link_to "サインアップ", new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>

  </header>

<%= yield %>

</body>
